datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          String       @id @default(uuid())
  email       String       @unique
  name        String?
  createdAt  DateTime     @default(now())
  submissions Submission[]
}

model Submission {
  id        String   @id @default(uuid())
  problem   String
  code      String
  analysis  String
  level     String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
